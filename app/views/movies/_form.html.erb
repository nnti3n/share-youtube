<div>
  <%= form_with url: "/create", method: :post, class: "form" do |form| %>
    <% if @error.present? %>
      <div class="error-message">
        <ul>
          <li><%= @error %></li>
        </ul>
      </div>
    <% end %>
    <%= form.label :url, "Youtube url:" %>
    <%= form.text_field :url, class: "form__input", autofocus: true %>
    <%= link_to "Cancel", "/", class: "btn btn--light" %>
    <%= form.submit "Share", class: "btn btn--secondary" %>
  <% end %>
</div>
